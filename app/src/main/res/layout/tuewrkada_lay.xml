<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_2">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/parent"
    android:background="@color/white"
        tools:context="com.govind.admin.bodytrainer.HomeWorkout.TuesdayActivity">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginTop="20dp"
            android:background="@drawable/gradiant_bgsec"
            android:text="Close Hand Push-Ups"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#66ffdf"
            android:textSize="18sp"  />

        <TextView
            android:id="@+id/textset"
            android:layout_width="180dp"
            android:layout_below="@+id/textView7"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="false"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginTop="0dp"
            android:background="@drawable/gradiant_bgsec"
            android:text="sets:10,12,14"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#66ffdf"
            android:textSize="18sp"  />


        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/closepushgif"
            android:layout_below="@+id/textset"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="190dp"


            />

    </RelativeLayout>
</android.support.v7.widget.CardView>