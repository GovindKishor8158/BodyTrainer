<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/parent"
   android:background="#000000"
    android:layout_height="match_parent"
    >


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/speedp"
       />

    <Button
        android:id="@+id/mond"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/gradiant_bgsec"
        android:text="Monday"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#66ffdf"
        android:textSize="18sp" />

    <Button
        android:id="@+id/tuesd"
        android:layout_alignParentRight="true"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
      android:layout_below="@+id/mond"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/gradiant_bgsec"
        android:text="Tuesday"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#66ffdf"
        android:textSize="18sp" />

    <Button
        android:id="@+id/wednsd"
        android:layout_width="180dp"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tuesd"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/gradiant_bgsec"
        android:text="Wednesday"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#66ffdf"
        android:textSize="18sp" />

    <Button
        android:id="@+id/thusd"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/wednsd"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/gradiant_bgsec"
        android:text="Thursday"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#66ffdf"
        android:textSize="18sp" />


    <Button
        android:id="@+id/frid"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thusd"
        android:layout_alignParentRight="true"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/gradiant_bgsec"
        android:text="Friday"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#66ffdf"
        android:textSize="18sp" />
    <Button
        android:id="@+id/satd"
        android:layout_width="180dp"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frid"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/gradiant_bgsec"
        android:text="Saturday"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#66ffdf"
        android:textSize="18sp" />
    <Button
        android:id="@+id/sund"
        android:layout_alignParentRight="true"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/satd"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/gradiant_bgsec"
        android:text="Sunday"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#66ffdf"
        android:textSize="18sp" />
</RelativeLayout>


