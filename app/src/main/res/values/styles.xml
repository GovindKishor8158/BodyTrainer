<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="edtTextStyle">
        <item name="colorControlNormal">@color/mid_grey</item>
        <item name="colorControlActivated">@color/colorAccent1</item>
        <item name="colorControlHighlight">@color/colorAccent1</item>
    </style>

    <style name="MyDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorAccent1</item>
    </style>
    <style name="edtTextStyl">
        <item name="colorControlNormal">@color/dark_grey</item>
        <item name="colorControlActivated">@color/five</item>
        <item name="colorControlHighlight">@color/five</item>
        <item name="android:textColorHint">@color/txt_color</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
